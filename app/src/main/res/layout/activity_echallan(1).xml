<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Echallan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/bg"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <TextView
            android:id="@+id/company_name_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="200dp"
            android:text="Company Name:" />

        <TextView
            android:id="@+id/company_name"
            android:textColor="@color/colorBlack"
            android:layout_width="180dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="200dp"
            android:layout_toRightOf="@id/company_name_lab"
            android:text="" />

        <TextView
            android:id="@+id/add_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/company_name_lab"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="20dp"
            android:text="Company Address:" />

        <TextView
            android:id="@+id/addre"
            android:layout_width="199dp"
            android:layout_height="55dp"
            android:textColor="@color/colorBlack"
            android:layout_below="@id/company_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/add_lab" />

        <TextView
            android:id="@+id/contact_number_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_lab"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="58dp"
            android:text="Contact Number:" />

        <TextView
            android:id="@+id/contact_number"
            android:layout_width="200dp"
            android:layout_height="25dp"
            android:layout_below="@id/addre"
            android:layout_marginLeft="14dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/add_lab"
            android:text="" />

        <TextView
            android:id="@+id/email_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/contact_number_lab"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="21dp"
            android:text="Email Address :" />

        <TextView
            android:id="@+id/email_add"

            android:layout_width="250dp"
            android:layout_height="25dp"
            android:layout_below="@id/contact_number"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/email_lab"
            />


        <TextView
            android:id="@+id/ground_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_lab"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="31dp"
            android:text="Ground:" />

        <TextView
            android:id="@+id/ground_no"
            android:layout_width="80dp"
            android:textColor="@color/colorBlack"
            android:layout_height="20dp"
            android:layout_below="@id/email_add"
            android:layout_marginLeft="-66dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/add_lab"
            android:text="" />


        <TextView
            android:id="@+id/portion_lab"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_below="@id/email_add"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="21dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/ground_no"

            android:text="Portions:" />

        <TextView
            android:id="@+id/selected_portion"
            android:layout_width="135dp"
            android:layout_height="25dp"
            android:layout_below="@id/email_add"
            android:layout_marginLeft="7dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/portion_lab"
            android:text="" />


        <TextView
            android:id="@+id/date_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ground_lab"
            android:layout_marginLeft="60dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="21dp"
            android:text="Date:" />

        <TextView
            android:id="@+id/confirmed_date"
            android:layout_width="80dp"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
            android:layout_below="@id/ground_no"
            android:layout_marginLeft="-79dp"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/add_lab"
            android:text="" />


        <TextView
            android:id="@+id/price_lab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/portion_lab"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="21dp"
            android:layout_toRightOf="@id/ground_no"
            android:text="Price:" />



        <TextView
            android:id="@+id/confirmed_price"
            android:layout_width="130dp"
            android:layout_height="25dp"
            android:layout_below="@id/selected_portion"
            android:layout_marginLeft="-2dp"
            android:textColor="@color/colorBlack"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/portion_lab"
            android:text="" />

        <ImageButton
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmed_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/ic_home_black_24dp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>