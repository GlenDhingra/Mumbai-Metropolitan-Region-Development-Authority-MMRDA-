<?xml version="1.0" encoding="utf-8"?>


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen"
        tools:context=".ground_selection_2">


        <RelativeLayout

            android:id="@+id/relative_ground_sel"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <Button
                android:id="@+id/ground_sel_1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="45dp"
                android:background="@drawable/ground_sel"
                android:padding="10dp" />
            <!--android:onClick="change1"-->


            <Button
                android:id="@+id/ground_sel_2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="45dp"
                android:layout_toRightOf="@id/ground_sel_1"
                android:background="@drawable/ground_sel"/>
            <!--android:onClick="change2" -->



            <TextView
                android:id="@+id/text_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/ground_sel_2"
                android:text="Price"
                android:textSize="22sp" />




            <TextView
                android:id="@+id/text_dis"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" â‚¹ 0 "
                android:layout_marginTop="40dp"
                android:layout_toRightOf="@id/text_price"

                android:textSize="22sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/groundname"
                android:text="Ground 2"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:id="@+id/text_area"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="22dp"
                android:layout_below="@id/text_price"
                android:layout_toRightOf="@id/ground_sel_4"
                android:text="Area"
                android:textSize="22sp" />




            <TextView
                android:id="@+id/text_dis1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=" 0 sq.m"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/text_area"
                android:layout_below="@id/text_dis"

                android:textSize="22sp" />


            <TextView
                android:id="@+id/text_por"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_below="@id/text_area"
                android:layout_toRightOf="@id/ground_sel_4"
                android:text="Portion"
                android:textSize="22sp" />




            <TextView
                android:id="@+id/text_dis2"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"

                android:layout_marginTop="22dp"
                android:layout_toRightOf="@id/text_por"
                android:layout_below="@id/text_dis1"

                android:textSize="22sp" />


            <Button
                android:id="@+id/ground_sel_3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/ground_sel_1"
                android:layout_marginLeft="25dp"
                android:background="@drawable/ground_sel"
                android:padding="10dp" />
            <!--android:onClick="change3"-->



            <Button
                android:id="@+id/ground_sel_4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="-1dp"

                android:layout_below="@id/ground_sel_2"
                android:layout_toRightOf="@id/ground_sel_3"
                android:background="@drawable/ground_sel"
                android:padding="10dp" />
            <!--android:onClick="change4"-->


        </RelativeLayout>

        <TextView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_below="@+id/calender_date"
            android:id="@+id/dater"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_below="@id/relative_ground_sel"
            android:id="@+id/relative_calender"
            android:layout_height="310dp">

            <CalendarView
                android:id="@+id/calendarView"

                android:background="@drawable/bg_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minDate="6-1-2019"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/calender_date"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="5dp"
            android:layout_below="@id/relative_calender"
            android:text="NA"
            />
        <Button
            android:id="@+id/book"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/calender_date"
            android:text="Book Now"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_button"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>


    </RelativeLayout>

